<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bd_a"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#ff0b9914">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"></LinearLayout>

        <TextView android:text="Dish Name" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:capitalize="none"
            android:textColor="#ffffffff"
            android:textSize="22dp" />
        <EditText android:id="@+id/eTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginBottom="10dp"
            android:background="#fffcfffa"
            android:layout_weight="0.13" />

        <TextView android:text="Description" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ffffffff"
            android:textSize="22dp" />
        <EditText android:id="@+id/eDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:singleLine="true"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="#fffdfffb" />

        <TextView android:text="Ingredients" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:lines="2"
            android:textColor="#ffffffff"
            android:textSize="22dp" />
        <EditText android:id="@+id/eIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="2"
            android:singleLine="true"
            android:gravity="top"
            android:background="#fffffff7" />

        <TextView android:text="Steps" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ffffffff"
            android:textSize="22dp" />
        <EditText android:id="@+id/eSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="8"
            android:singleLine="true"
            android:gravity="top"
            android:background="#fff9fff2" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <Button android:id="@+id/save_btn"
                android:text="Save"
                android:layout_width="121dp"
                android:layout_height="49dp"
                android:textColor="#fffffcf2"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="#fffe3f23" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>

